@model EmployeeDetails
@{
	ViewData["Title"] = "Coding Test";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<form asp-controller="Home" asp-action="Index" method="post">
		<div class="row">
			<div class="col-lg-4">First Name</div>
			<div class="col-lg-8">
				<input asp-for="Firstname" placeholder="Enter your First name" autocomplete="off" class="form-control" />
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col-lg-4">Last Name</div>
			<div class="col-lg-8">
				<input asp-for="Lastname" placeholder="Enter your Last name" autocomplete="off" class="form-control" />
			</div>
		</div>
		<br />

		<div class="row">
			<div class="col-lg-offset-4 col-lg-8">
				<button type="submit" class="btn btn-primary">Save</button>
				<label id="lbmsg" style="color:green;"></label>
			</div>
		</div>

	</form>
</div>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
@if (Model != null)
{
<script type="text/javascript">
		$(function () {
			alert('@Model.Firstname' + " " + '@Model.Lastname' + " Successfully Inserted");
			$("input:text").val("");
            });
</script>
}